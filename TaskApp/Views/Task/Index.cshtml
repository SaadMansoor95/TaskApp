@using TaskApp.Models
@model TaskApp.Models.Tasks
@{
    ViewData["Title"] = "Index";
}


<h1>Simple Task Application</h1>
<div class="border border-dark">

    <div class="container">
        <div class="row p-2">
            <div style="display: flex;justify-content: space-between;">
                <h3>Task tracker</h3>
                <button class="btn btn-success">Add</button>
            </div>
        </div>


        <div>
            @using (Html.BeginForm("Index", "Task"))
            {
                @Html.HiddenFor(m => m.TaskId)
                <div class="form-group">
                    @Html.LabelFor(m => m.TaskName)
                    @Html.TextBoxFor(m => m.TaskName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TaskName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TaskDateTime)
                    @Html.TextBoxFor(m => m.TaskDateTime, new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(m => m.TaskDateTime)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SetReminder)
                    @Html.CheckBoxFor(m => m.SetReminder)
                </div>
                <button type="submit" class="btn btn-dark" style="width: 100%">Save Task</button>
            }
        </div>
        <div class="mt-3 mb-3" style="background: lightgray">
            <div class="border border-dark">
                <div class="m-1">
                    <button type="button" class="close" style="float: right" aria-label="Close" id="deleteButton">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="m-3">
                    <h4>Food Shopping</h4>
                    <h6>Date:</h6>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts
{
    <script>
        $("#deleteButton").click(function() {
            $.ajax({
                type: "Delete",
                url: '@Url.Action("Delete", "Task", new { id = "1"})',
                contentType: 'application/json; charset=utf-8',
                success: function(data) {}
            });
        });
    </script>
}